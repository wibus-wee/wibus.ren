{
  "name": "mog-theme-tiny",
  "version": "0.2.1",
  "private": true,
  "description": "A simple, clean, and minimalistic theme for NEXT.",
  "author": "Wibus <https://iucky.cn>",
  "license": "AGPLv3",
  "repository": {
    "directory": "mogland/mog-theme-tiny",
    "url": "https://github.com/mogland/mog-theme-tiny"
  },
  "homepage": "https://github.com/mogland/mog-theme-tiny#readme",
  "issues": "https://github.com/mogland/mog-theme-tiny/issues",
  "engines": {
    "node": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --ignore-path ./.gitignore --write"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf .next",
    "predev": "rimraf .next",
    "dev": "cross-env NODE_ENV=development next dev",
    "build": "cross-env NODE_ENV=production next build",
    "build:pwa": "sh scripts/build.sh",
    "start": "cross-env NODE_ENV=production next start",
    "lint": "next lint",
    "lint:eslint": "eslint --ext .ts,.tsx --ignore-path .gitignore . --fix",
    "lint-staged": "lint-staged",
    "stylelint": "stylelint 'src/**/*.{css,scss}' --fix",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:reload": "pm2 reload ecosystem.config.js"
  },
  "browserslist": [
    "chrome >=94",
    "safari >=14",
    "last 2 Firefox versions"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "next-pwa",
        "next"
      ]
    }
  },
  "dependencies": {
    "@headlessui/react": "^1.7.14",
    "cross-env": "7.0.3",
    "framer-motion": "10.12.17",
    "lodash-es": "4.17.21",
    "mobx": "6.9.0",
    "mobx-react-lite": "3.4.3",
    "next": "13.4.7",
    "next-seo": "6.0.0",
    "ohmyfetch": "0.4.21",
    "qier-progress": "1.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "8.0.7",
    "react-message-popup": "1.1.3",
    "react-use": "17.4.0",
    "rehype-raw": "6.1.1",
    "remark-gfm": "3.0.1"
  },
  "devDependencies": {
    "@innei-util/eslint-config-react-ts": "0.8.2",
    "@innei/prettier": "0.9.11",
    "@tailwindcss/typography": "0.5.9",
    "@types/lodash": "4.14.195",
    "@types/node": "18.16.18",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@types/react-lazyload": "3.2.0",
    "@types/react-syntax-highlighter": "15.5.7",
    "autoprefixer": "10.4.14",
    "babel-plugin-module-resolver": "5.0.0",
    "clsx": "1.2.1",
    "eslint": "8.43.0",
    "eslint-config-next": "13.4.7",
    "husky": "8.0.3",
    "less": "4.1.3",
    "lint-staged": "13.2.3",
    "next-compose-plugins": "2.2.1",
    "next-pwa": "5.6.0",
    "postcss": "8.4.24",
    "postcss-nesting": "11.2.2",
    "prettier": "2.8.8",
    "rimraf": "5.0.1",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4"
  }
}
